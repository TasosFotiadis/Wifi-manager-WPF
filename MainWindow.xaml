            <Button
                x:Name="BtnBackspace"
                Grid.Row="3"
                Grid.Column="9"
                Grid.ColumnSpan="1"
                Click="Backspace_Click"
                Content="⌫"
                FontSize="22"
                FontWeight="Bold"
                Style="{StaticResource ConnectButtonStyle}" />
        </Grid>

        <StackPanel
            Grid.Row="4"
            Margin="0,8,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                x:Name="TxtStatus"
                Margin="12,8,0,0"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="{StaticResource SubTextBrush}"
                Text="Status: ---" />
        </StackPanel>
    </Grid>
</Window>