<Window
    x:Class="WifiManagerWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:WifiManagerWPF"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Title="Wi-Fi Manager"
    MaxWidth="1366"
    MaxHeight="760"
    Background="{DynamicResource PrimaryBackground}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>

        <!--  Brush palette (use brushes directly to avoid Color vs Brush mismatches)  -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0F1724" />
        <SolidColorBrush x:Key="CardBackground" Color="#0F1A2B" />
        <SolidColorBrush x:Key="CardBorder" Color="#223448" />
        <SolidColorBrush x:Key="AccentBrush" Color="#2196F3" />
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#4FC3F7" />
        <SolidColorBrush x:Key="TextBrush" Color="#E6EEF8" />
        <SolidColorBrush x:Key="SubTextBrush" Color="#B8C8D8" />
        <SolidColorBrush x:Key="KeyBrush" Color="#162734" />
        <SolidColorBrush x:Key="KeyPressedBrush" Color="#1E3A56" />
        <SolidColorBrush x:Key="ConnectedBrush" Color="#4CAF50" />
        <SolidColorBrush x:Key="DangerBrush" Color="#EF5350" />

        <!--  converters  -->
        <local:SignalStrengthToWifiIconResourceConverter x:Key="SignalToWifiIconResource" />
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!--  Connected Status style  -->
        <Style x:Key="ConnectedStatusStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4CAF50" />
            <!--  soft green  -->
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="18"
                        Opacity="0.9"
                        ShadowDepth="0"
                        Color="#4CAF50" />
                </Setter.Value>
            </Setter>
        </Style>


        <!--  Touch-friendly button style (accent filled, more alive)  -->
        <Style x:Key="ConnectButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="MinWidth" Value="130" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="BorderThickness" Value="0" />

            <!--  base gradient background  -->
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#4FC3F7" />
                        <GradientStop Offset="0.5" Color="#2196F3" />
                        <GradientStop Offset="1" Color="#1565C0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="14">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="14"
                                    ShadowDepth="0"
                                    Color="#501E88E5" />
                            </Border.Effect>

                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>

                            <!--  hover: brighter, stronger glow, slight scale up  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="#81D4FA" />
                                            <GradientStop Offset="0.5" Color="#42A5F5" />
                                            <GradientStop Offset="1" Color="#1E88E5" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="root" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="20"
                                            ShadowDepth="0"
                                            Color="#702196F3" />
                                    </Setter.Value>
                                </Setter>

                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.04"
                                                Duration="0:0:0.10" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.04"
                                                Duration="0:0:0.10" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1"
                                                Duration="0:0:0.10" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1"
                                                Duration="0:0:0.10" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!--  pressed: darker + tiny shrink  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="#1976D2" />
                                            <GradientStop Offset="1" Color="#1565C0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="0.97"
                                                Duration="0:0:0.05" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="0.97"
                                                Duration="0:0:0.05" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1"
                                                Duration="0:0:0.08" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1"
                                                Duration="0:0:0.08" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!--  disabled  -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Opacity" Value="0.6" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="DangerButton"
            BasedOn="{StaticResource ConnectButtonStyle}"
            TargetType="Button">
            <!--  background close to card  -->
            <Setter Property="Background" Value="#121C2C" />
            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}" />
            <Setter Property="Foreground" Value="{StaticResource DangerBrush}" />
            <Setter Property="MinWidth" Value="110" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="12"
                        ShadowDepth="0"
                        Color="#40EF5350" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1.5"
                            CornerRadius="10">
                            <ContentPresenter
                                Margin="16,6"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DangerBrush}" />
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBackground}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C62828" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="ExitButtonStyle"
            BasedOn="{StaticResource DangerButton}"
            TargetType="Button">
            <!--  make it solid red by default  -->
            <Setter Property="Background" Value="{StaticResource DangerBrush}" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryBackground}" />
            <!--  small, icon-like  -->
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="0" />
        </Style>

        <Style x:Key="DisconnectButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#121C2C" />
            <Setter Property="Foreground" Value="#EF5350" />
            <Setter Property="BorderBrush" Value="#EF5350" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="MinWidth" Value="130" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        ShadowDepth="0"
                        Color="#40EF5350" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EF5350" />
                                <Setter Property="Foreground" Value="#121C2C" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="20"
                                            ShadowDepth="0"
                                            Color="#80EF5350" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C62828" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!--  Small icon button based on TouchButton  -->
        <Style
            x:Key="IconButton"
            BasedOn="{StaticResource ConnectButtonStyle}"
            TargetType="Button">
            <Setter Property="MinWidth" Value="40" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="4" />
        </Style>

        <!--  Key button for on-screen keyboard  -->
        <Style
            x:Key="KeyButton"
            BasedOn="{StaticResource ConnectButtonStyle}"
            TargetType="Button">

            <!--  size  -->
            <Setter Property="MinWidth" Value="72" />
            <Setter Property="MinHeight" Value="64" />
            <Setter Property="FontSize" Value="26" />

            <!--  small gap between keys so the grid looks softer  -->
            <Setter Property="Margin" Value="2" />

            <!--  subtle gradient instead of flat color  -->
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#182633" />
                        <GradientStop Offset="1" Color="#121A23" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Setter Property="BorderBrush" Value="#304A5E" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontWeight" Value="Bold" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource KeyPressedBrush}" />
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentHoverBrush}" />
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBackground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!--  fill grid cells  -->
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>



        <!-- add this inside <Window.Resources> after the existing KeyButton style -->
        <Style x:Key="KeyToggleButton" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="MinWidth" Value="72" />
            <Setter Property="MinHeight" Value="64" />
            <Setter Property="BorderThickness" Value="0" />

            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#4FC3F7" />
                        <GradientStop Offset="0.5" Color="#2196F3" />
                        <GradientStop Offset="1" Color="#1565C0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            x:Name="root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="14">
                            <!--  REMOVE default effect here: no glow when OFF  -->
                            <!--<Border.Effect>...</Border.Effect>-->

                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>

                            <!--  ON (glow + scale)  -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="root" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="#81D4FA" />
                                            <GradientStop Offset="0.5" Color="#42A5F5" />
                                            <GradientStop Offset="1" Color="#1E88E5" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White" />
                                <!--  glow ONLY when checked  -->
                                <Setter TargetName="root" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="18"
                                            ShadowDepth="0"
                                            Color="#702196F3" />
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.05"
                                                Duration="0:0:0.08" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.05"
                                                Duration="0:0:0.08" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1"
                                                Duration="0:0:0.10" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1"
                                                Duration="0:0:0.10" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!--  hover: only color change, no glow  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="#81D4FA" />
                                            <GradientStop Offset="0.5" Color="#42A5F5" />
                                            <GradientStop Offset="1" Color="#1E88E5" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <!--  IMPORTANT: do NOT set Effect here  -->
                            </Trigger>

                            <!--  pressed: darker + tiny shrink  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="#1976D2" />
                                            <GradientStop Offset="1" Color="#1565C0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="0.97"
                                                Duration="0:0:0.05" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="0.97"
                                                Duration="0:0:0.05" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1"
                                                Duration="0:0:0.08" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1"
                                                Duration="0:0:0.08" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!--  disabled  -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Opacity" Value="0.6" />
                                <!--  also remove glow in disabled state  -->
                                <Setter TargetName="root" Property="Effect" Value="{x:Null}" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!--  styler for the switch toggle  -->
        <Style x:Key="SwitchCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Switch body  -->
                            <Grid
                                Grid.Column="0"
                                Width="120"
                                Height="52">
                                <!--  Hitbox  -->
                                <Rectangle Fill="Transparent" />

                                <!--  Toggle outline  -->
                                <Border
                                    x:Name="ToggleBorder"
                                    Background="{StaticResource PrimaryBackground}"
                                    BorderBrush="{StaticResource CardBorder}"
                                    BorderThickness="1"
                                    CornerRadius="20">
                                    <Border.Effect>
                                        <!--  subtle base glow  -->
                                        <DropShadowEffect
                                            BlurRadius="6"
                                            ShadowDepth="0"
                                            Color="#40111122" />
                                    </Border.Effect>

                                    <!--  Knob  -->
                                    <Ellipse
                                        x:Name="ToggleEllipse"
                                        Width="30"
                                        Height="30"
                                        Margin="4,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Fill="{StaticResource SubTextBrush}" />
                                </Border>
                            </Grid>

                            <!--  Label (Wi-Fi text)  -->
                            <ContentPresenter
                                Grid.Column="1"
                                Margin="18,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!--  ON  -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleEllipse" Property="HorizontalAlignment" Value="Right" />

                                <!--  gradient + stronger glow when ON  -->
                                <Setter TargetName="ToggleBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Offset="0" Color="#4FC3F7" />
                                            <GradientStop Offset="0.5" Color="#2196F3" />
                                            <GradientStop Offset="1" Color="#1565C0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>

                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}" />

                                <Setter TargetName="ToggleEllipse" Property="Fill" Value="{StaticResource PrimaryBackground}" />

                                <Setter TargetName="ToggleBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="16"
                                            ShadowDepth="0"
                                            Color="#802196F3" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!--  Hover (both ON and OFF)  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="{StaticResource AccentHoverBrush}" />
                                <Setter TargetName="ToggleEllipse" Property="Fill" Value="{StaticResource AccentHoverBrush}" />
                            </Trigger>

                            <!--  Focus  -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="ToggleBorder" Property="BorderThickness" Value="2" />
                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="{StaticResource AccentHoverBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        </Style>



        <!--  Card style for networks  -->
        <Style x:Key="NetworkCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Width" Value="320" />
            <Setter Property="MinHeight" Value="140" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        ShadowDepth="2"
                        Color="#0A000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Selected ListBoxItem visual (explicit to avoid binding output errors)  -->
        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="Transparent" SnapsToDevicePixels="True">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Opacity" Value="1" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.95" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Small helper style for header text  -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!--  Subtext style  -->
        <Style x:Key="SubText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}" />
        </Style>

        <!--  PasswordBox style  -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#0B2233" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="#2A4A63" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8" />
        </Style>

        <!--  TextBox styled to match PasswordBox (used for show/hide)  -->
        <Style x:Key="PasswordTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0B2233" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="#2A4A63" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8" />
